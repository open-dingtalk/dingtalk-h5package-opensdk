# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
tab_width = 1
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
insertSpaces = false
detectIndentation = false
prettier.eslintIntegration = true
eslint.autoFixOnSave = true

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
